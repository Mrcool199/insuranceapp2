<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tester3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="658dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="0dp"
                    android:text="My profile"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fullName_field"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:paddingTop="20dp"
                    android:text="@+id/fullName_field"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="43pt"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/card1"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:contentDescription="icon"
                        android:gravity="right"
                        android:src="@drawable/placeholder" />

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="97dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:contentDescription="icon"
                        android:gravity="center"
                        android:src="@drawable/untied"
                        android:text="Add photo"
                        android:textSize="25px" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="You are logged into your platinum account"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:paddingTop="20dp"
                android:text="Mobile number"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phoneNo_field"
                android:layout_width="327dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingTop="20dp"
                android:text="@+id/phoneNo_field"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingTop="20dp"
                android:text="Email adress"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/email_field"
                android:layout_width="327dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingTop="20dp"
                android:text="@+id/email_field"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/GreenBlue"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:paddingStart="115sp"
                android:text="Update"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/DarkBlue"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:paddingStart="120sp"
                android:text="Cancel"
                android:textSize="20sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>